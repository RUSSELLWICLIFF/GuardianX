rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and update their own document
      allow read, update: if isOwner(userId);
      // Only system can create (via Cloud Function on user creation)
      allow create: if isAuthenticated();
      
      // Contacts subcollection
      match /contacts/{contactId} {
        // Users can manage their own contacts
        allow read, write: if isOwner(userId);
      }
    }
    
    // SOS Alerts collection
    match /sosAlerts/{alertId} {
      // Users can create their own SOS alerts
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Users can read their own SOS alerts
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can update their own SOS alerts (e.g., to mark as resolved)
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Prevent deletion
      allow delete: if false;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
